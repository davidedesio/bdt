<div class="card card-profile shadow">
    <div class="row justify-content-center">
        <div class="col-lg-3 order-lg-2">
            <div class="card-profile-image">
                <a href="{{path('app_user_profile')}}">
                    <div class="rounded-circle profile-picture big" style="background:url({{ user.picture }})">
                        {% if (user is defined and user.picture is null) %}
                            <i class="fa fa-user"></i>
                        {% endif %}
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
        <!--
        <div class="d-flex justify-content-between">
            <a href="#" class="btn btn-sm btn-info mr-4"></a>
            <a href="#" class="btn btn-sm btn-default float-right"></a>
        </div>
        -->
    </div>
    <div class="card-body pt-0 pt-md-4">
        <div class="row card-profile-stats mt-md-5">
            <div class="col-lg-4">
                <span class="heading">{{ statistics.transactions.sent }} {% if statistics.transactions.sent==1 %}{{ 'UNIT'|trans }}{% else %}{{ 'UNITS'|trans }}{% endif %}</span>
                <span class="description">Spese</span>
            </div>
            <div class="col-lg-4">
                <span class="heading">{{ statistics.transactions.received }} {% if statistics.transactions.received==1 %}{{ 'UNIT'|trans }}{% else %}{{ 'UNITS'|trans }}{% endif %}</span>
                <span class="description">Ricevute</span>
            </div>
            <div class="col-lg-4 credit-highlight">
                <a href="{{ path('app_credit') }}">
                    <span class="heading">{{ statistics.transactions.credit }} {% if statistics.transactions.credit==1 %}{{ 'UNIT'|trans }}{% else %}{{ 'UNITS'|trans }}{% endif %}</span>
                    <span class="description">Credito</span>
                </a>
            </div>
        </div>
        <div class="row card-profile-stats">
            <div class="col-lg-4">
                <span class="heading">{{ statistics.activities.asked }} {{ 'ACTIVITIES'|trans }}</span>
                <span class="description">Richieste</span>
            </div>
            <div class="col-lg-4">
                <span class="heading">{{ statistics.activities.done }}  {{ 'ACTIVITIES'|trans }}</span>
                <span class="description">Eseguite</span>
            </div>
            <div class="col-lg-4">
                <span class="heading">{{ statistics.activities.involved }}  {{ 'ACTIVITIES'|trans }}</span>
                <span class="description">Partecipate</span>
            </div>
        </div>
        <div class="text-center">
            {% if user.birthDate is not null %}
                <h3>
                    {{ user.name }} {{ user.surname }}<span class="font-weight-light">, {{ date('now').diff((date(user.birthDate))).format('%y anni') }}</span>
                </h3>
            {% endif %}
            <div class="h5 font-weight-300">
                {{ user.description }}
            </div>
            <div class="h5 mt-4">
                {{ user.job }}
            </div>
            <div>
                {% for tag in user.tags %}
                {{ tag }}
                {% endfor %}
            </div>
        </div>
    </div>
</div>