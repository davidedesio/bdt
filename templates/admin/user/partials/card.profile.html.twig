<div class="card card-profile shadow">
    <div class="row justify-content-center">
        <div class="col-lg-3 order-lg-2">
            <div class="card-profile-image">
                <a href="javascript:void(0)">
                    <div class="rounded-circle profile-picture big" style="background:url({{ newUser is defined?newUser.picture:editUser.picture }})">
                        {% if (newUser is defined and newUser.picture is null) or (editUser is defined and editUser.picture is null) %}
                           <i class="fa fa-user"></i>
                        {% endif %}
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
    </div>
    <div class="card-body pt-0 pt-md-4">
    </div>
</div>