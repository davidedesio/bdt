{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('restricted') }}
{% endblock %}

{% block title %}New Transaction{% endblock %}

{% block body %}

    {% include('admin/commons/offcanvas-menu-right.html.twig') %}
    <div id="main" class="main-content">

        {% include 'admin/commons/navbar.html.twig' %}
        {% include 'restricted/commons/header.html.twig' %}
        <div class="container-fluid mt--7">
            <div class="card bg-secondary shadow">
                <div class="card-header bg-white border-0">
                    <div class="row">
                        <div class="col-lg-10">
                            <h1>{{ 'ACTIVITY_TRANSACTION_ADD'|trans }}</h1>
                        </div>
                        <div class="col-lg-2">
                            <a class="btn btn-primary" href="{{ path('admin_transaction_index') }}">{{ 'BACK'|trans }}</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{ include('admin/transaction/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ encore_entry_script_tags('restricted') }}
    <script>
        var selectizeUserFrom = $("#transaction_userFrom").selectize({
            maxItems:1
        });

        var selectizeUserTo = $("#transaction_userTo").selectize({
            maxItems:1
        });
    </script>
{% endblock %}
